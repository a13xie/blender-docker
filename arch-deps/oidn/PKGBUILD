pkgname=openimagedenoise
pkgver=2.3.0
pkgrel=1
pkgdesc='Intel(R) Open Image Denoise library'
arch=('x86_64' 'aarch64')
url='https://openimagedenoise.github.io'
license=('Apache')
depends=('intel-tbb')
makedepends=('cmake' 'ninja' 'ispc' 'python')
source=(
  "git+https://github.com/RenderKit/oidn#tag=v$pkgver"
)
sha512sums=('e0b6e0060bb448c65e11c07c879458cc1700335d1e30858d59cf4616dcf247f3231d90c92b689e65da0b7e4733a545cffc431bf4cc3c54f0dacfdf3c387eff1f')

build() {
  cd oidn

  cmake \
    -B build \
    -G Ninja \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
  ninja -C build
}

package() {
  cd oidn-$pkgver
  DESTDIR="$pkgdir" ninja -C build install
}

